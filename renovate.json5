{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  extends: ["config:recommended"],
  baseBranchPatterns: ["dev1"],
  enabledManagers: ["github-actions"],
  branchPrefix: "Garoon-renovate/",
  labels: ["renovate"],
  timezone: "Asia/Tokyo",
  minimumReleaseAge: "0 days", // to test
  dependencyDashboard: true,
  automergeSchedule: ["at any time"], // testing
  prConcurrentLimit: 0, // Update later
  prHourlyLimit: 0,
  prHourlyLimit: 0,
  semanticCommits: "disabled",
  automergeStrategy: "merge-commit",
  platformAutomerge: false,
  lockFileMaintenance: {
    enabled: true,
    automerge: false,
    schedule: ["every 3 months on the first day of the month"],
    branchTopic: "lock-file-maintenance-{{packageFile}}",
    commitMessageExtra: "({{packageFile}})",
  },
  "packageRules": [
    /* ------------------------------------------
      GitHub Actions
    ------------------------------------------  */

    // Auto-merge minor/patch updates for trusted actions
    {
      matchManagers: ["github-actions"],
      matchDepTypes: ["action"],
      matchUpdateTypes: ["minor", "patch"],
      branchPrefix: "Garoon-renovate-automerge/",
      automerge: true,
      matchPackageNames: [
        "/^actions\\//",
        "/^cybozu/",
        "/^aws-actions\\//",
        "/^docker\\//",
        "/^ruby\\//"
        ],
    },

    // Disable Docker images updates (MySQL, AWS ECR, Oracle Container Registry)
    {
      matchManagers: ["github-actions"],
      matchDepTypes: ["service", "container"],
      matchPackageNames: [
        "mysql",
        "/\\.dkr\\.ecr\\..*\\.amazonaws\\.com//",
        "/container-registry\\.oracle\\.com/",
      ],
      enabled: false,
    },

    // Disable runtime version updates (Node.js, Java, Python)
    {
      matchManagers: ["github-actions"],
      matchPackageNames: ["/^(node|java|python)$/"],
      enabled: false,
    }
  ],
  customManagers: [],
}
